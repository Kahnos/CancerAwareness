<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/list_item_timeline_thumbnail"
        android:src="@android:drawable/ic_menu_gallery"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="false"
        android:focusableInTouchMode="false"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/list_item_timeline_status"
        android:layout_toRightOf="@+id/list_item_timeline_thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/timeline_healthy"  />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/list_item_timeline_date"
        android:layout_below="@+id/list_item_timeline_status"
        android:layout_toRightOf="@+id/list_item_timeline_thumbnail"
        android:text="Date goes here" />

</RelativeLayout>