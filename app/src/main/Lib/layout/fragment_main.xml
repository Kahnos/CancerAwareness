<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="3">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="2"
        android:background="#FFFFFF">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/imageView_avatar"
            android:src="@drawable/avatar" />
    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:background="#ffffffff">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageView_steps"
                android:src="@drawable/icon_steps"
                android:layout_weight="1"
                android:clickable="true"
                android:onClick="openActivity"
                android:background="@drawable/button_border_white" />
            <!--android:background="#ffffdefc" -->
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageView_library"
                android:layout_weight="1"
                android:clickable="true"
                android:onClick="openActivity"
                android:src="@drawable/icon_library"
                android:background="@drawable/button_border" />
            <!--android:background="#FFF5C9F5" -->
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageView_timeline"
                android:src="@drawable/icon_timeline"
                android:layout_weight="1"
                android:clickable="true"
                android:onClick="openActivity"
                android:background="@drawable/button_border" />
            <!--android:background="#FFF5C9F5" -->
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageView_doctors"
                android:src="@drawable/icon_doctor"
                android:layout_weight="1"
                android:clickable="true"
                android:onClick="openActivity"
                android:background="@drawable/button_border_white" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>