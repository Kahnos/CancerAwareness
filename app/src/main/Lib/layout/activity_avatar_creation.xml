<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:orientation="vertical"
    tools:context="com.example.jesscastro.sunshine.AvatarCreation2"
    android:weightSum="19"
    android:background="#ffffdefc">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="0dp"
        android:layout_weight="11">
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/body_view"
            android:src="@drawable/munequitablanquita"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/shoes_view"
            android:src="@drawable/zapatos3"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/clothes_view"
            android:src="@drawable/vestido1"
            android:layout_centerHorizontal="true" />
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/wig_view"
            android:src="@drawable/pelo1"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"></FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="1.5"
        android:gravity="right"
        android:weightSum="2">

        <Button
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:text="COLOR DE PIEL"
            android:id="@+id/avatar_changeskin"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="avatarOnClick"
            android:background="@drawable/button_border_steps"
            android:textColor="#FFFFFF" />

        <Button
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:text="FINALIZAR"
            android:id="@+id/avatar_finish"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="avatarOnClick"
            android:background="@drawable/button_border_steps"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="0dp"
        android:orientation="horizontal"
        android:layout_weight="1.5">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Adorno"
            android:id="@+id/button4"
            android:layout_weight="1"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:padding="0dp"
            android:onClick="paginas"
            android:background="@drawable/button_border_steps"
            android:textColor="#FFFFFF" />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Adorno"
            android:id="@+id/button2"
            android:layout_weight="1"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:padding="0dp"
            android:onClick="paginas"
            android:background="@drawable/button_border_steps"
            android:textColor="#FFFFFF" />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Adorno"
            android:id="@+id/button3"
            android:layout_weight="1"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:padding="0dp"
            android:onClick="paginas"
            android:background="@drawable/button_border_steps"
            android:textColor="#FFFFFF" />


    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="5"
        android:padding="0dp">
    </android.support.v4.view.ViewPager>
</LinearLayout>
