<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.josed_000.cancerawareness.ResultActivity"
    android:id="@+id/linear_result"
    android:weightSum="8"
    android:gravity="center_horizontal"
    android:background="@color/pink">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="1">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="RESULTADO"
            android:id="@+id/result_textview"
            android:layout_weight="1"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Date"
            android:id="@+id/result_date"
            android:gravity="center_horizontal"
            android:layout_below="@+id/result_textview" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="4">

        <ImageView
            android:layout_centerHorizontal="true"
            android:layout_width="220dp"
            android:layout_height="fill_parent"
            android:scaleType="centerInside"
            android:id="@+id/body_view3"
            android:src="@drawable/munequita3" />
        <ImageView
            android:layout_centerHorizontal="true"
            android:layout_width="220dp"
            android:layout_height="fill_parent"
            android:layout_alignTop="@+id/body_view3"
            android:scaleType="centerInside"
            android:id="@+id/shoes_view3"
            android:src="@drawable/black_shoes" />
        <ImageView
            android:layout_centerHorizontal="true"
            android:layout_width="220dp"
            android:layout_height="fill_parent"
            android:layout_alignTop="@+id/body_view3"
            android:scaleType="centerInside"
            android:id="@+id/pants_view3" />
        <ImageView
            android:layout_centerHorizontal="true"
            android:layout_width="220dp"
            android:layout_height="fill_parent"
            android:layout_alignTop="@+id/body_view3"
            android:scaleType="centerInside"
            android:id="@+id/clothes_view3"
            android:src="@drawable/vestido1" />
        <ImageView
            android:layout_centerHorizontal="true"
            android:layout_width="220dp"
            android:layout_height="fill_parent"
            android:layout_alignTop="@+id/body_view3"
            android:scaleType="centerInside"
            android:id="@+id/wig_view3"
            android:src="@drawable/pelo4" />
    </RelativeLayout>

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:id="@+id/result_listView"
        android:layout_weight="3" />

</LinearLayout>
