<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.josed_000.cancerawareness.SurveyActivity.SurveyFragment"
    android:orientation="vertical"
    android:weightSum="9"
    android:background="@color/pink">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="COMPLETA LA  ENCUESTA"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:textSize="28sp"
        android:gravity="center_horizontal"
        android:layout_weight="1.5"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:id="@+id/scrollView"
        android:paddingTop="15sp"
        android:layout_weight="6.5">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="6">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:baselineAligned="true"
                android:weightSum="4"
                android:layout_weight="1">

                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="3">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/symptom1"
                        android:id="@+id/checkBox1"
                        android:textSize="22sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/symptom1_detail"
                        android:id="@+id/textView2"
                        android:layout_below="@+id/checkBox1"
                        android:paddingStart="32sp"
                        android:textSize="18sp"
                        android:clickable="false" />

                </RelativeLayout>

                <ImageView
                    android:layout_width="0px"
                    android:layout_height="150dp"
                    android:id="@+id/imageView"
                    android:layout_weight="1"
                    android:src="@drawable/sintoma_1_secrecion" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:baselineAligned="true"
                android:weightSum="4"
                android:layout_weight="1" >

                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="3" >

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/symptom2"
                        android:id="@+id/checkBox2"
                        android:textSize="22sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/symptom2_detail"
                        android:id="@+id/textView3"
                        android:layout_below="@+id/checkBox2"
                        android:paddingStart="32sp"
                        android:textSize="18sp"
                        android:clickable="false" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="0px"
                    android:layout_height="150dp"
                    android:id="@+id/imageView2"
                    android:layout_weight="1"
                    android:src="@drawable/sintoma_2_pezon" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:baselineAligned="true"
                android:weightSum="4"
                android:layout_weight="1" >

                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="3" >

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/symptom3"
                        android:id="@+id/checkBox3"
                        android:textSize="22sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/symptom3_detail"
                        android:id="@+id/textView4"
                        android:layout_below="@+id/checkBox3"
                        android:paddingStart="32sp"
                        android:textSize="18sp"
                        android:clickable="false" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView3"
                    android:layout_weight="1"
                    android:src="@drawable/sintoma_3_" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:baselineAligned="true"
                android:weightSum="4"
                android:layout_weight="1" >

                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="3" >

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/symptom4"
                        android:id="@+id/checkBox4"
                        android:textSize="22sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/symptom4_detail"
                        android:id="@+id/textView5"
                        android:layout_below="@+id/checkBox4"
                        android:paddingStart="32sp"
                        android:textSize="18sp"
                        android:clickable="false" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView4"
                    android:layout_weight="1"
                    android:src="@drawable/sintoma_4_tension" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:baselineAligned="true"
                android:weightSum="4"
                android:layout_weight="1" >

                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="3" >

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/symptom5"
                        android:id="@+id/checkBox5"
                        android:textSize="22sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/symptom5_detail"
                        android:id="@+id/textView6"
                        android:layout_below="@+id/checkBox5"
                        android:paddingStart="32sp"
                        android:textSize="18sp"
                        android:clickable="false" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView5"
                    android:layout_weight="1"
                    android:src="@drawable/sintoma_5_textura" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:baselineAligned="true"
                android:weightSum="4"
                android:layout_weight="1" >

                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="3" >

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/symptom6"
                        android:id="@+id/checkBox6"
                        android:textSize="22sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/symptom6_detail"
                        android:id="@+id/textView7"
                        android:layout_below="@+id/checkBox6"
                        android:paddingStart="32sp"
                        android:textSize="18sp"
                        android:clickable="false" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="0px"
                    android:layout_height="150dp"
                    android:id="@+id/imageView6"
                    android:layout_weight="1"
                    android:src="@drawable/sintoma_6_masa" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:text="FINALIZAR EXAMEN"
        android:id="@+id/Finish_button"
        android:clickable="true"
        android:layout_weight="1"
        android:onClick="onClick"
        android:background="@color/dark_pink"
        android:textColor="@color/white"/>

</LinearLayout>
